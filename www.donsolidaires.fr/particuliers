      <section data-snippet="s_blog_posts" class="s_blog_posts s_dynamic_snippet_blog_posts s_dynamic pb32 o_colored_level s_blog_posts_effect_marley s_blog_post_card pt0 o_cc o_cc1 o_dynamic_empty" data-filter-id="6" data-template-key="website_blog.dynamic_filter_template_blog_post_card" data-number-of-elements="3" data-filter-by-blog-id="-1" data-number-of-elements-small-devices="1" data-number-of-records="3" data-force-minimum-max-limit-to16="1" data-original-title="" title="" aria-describedby="tooltip879126" data-name="bloc actualités">
        <div class="o_not_editable container">
          <h2>
